---
import HomeButton from '../components/LinkHomePage.astro';
import Footer from '../components/Footer.astro';
import NavBar from '../components/NavBar.astro';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="h-screen text-left flex flex-col">
    <NavBar />

    <slot />
    <div
      class="backdrop-blur relative flex-shrink-0 sm:bottom-0 w-full sm:fixed"
    >
      <Footer />
    </div>
    <HomeButton />
  </body>
</html>
