---
import { SITE_TITLE } from '../consts';

import Hamburger from './Hamburger.astro';
import Navigation from './StyleLinkNavigation.astro';

const pages = [
  { url: '/', title: 'Inicio' },
  { url: '/about', title: 'Sobre OneSoftNow' },
  { url: '/services', title: 'Servicios' },
  { url: '/products', title: 'Productos' },
  { url: '/portafolio', title: 'Portafolio' },
  { url: '/blog', title: 'Blog' },
  { url: '/contact', title: 'Contacto' },
];
---

<header>
  <nav>
    <div
      class="prose lg:prose-xl prose-neutral max-w-5xl mx-auto px-3 py-3 flex items-center justify-between h-16"
    >
      <a href="/" class="font-bold text-xl hover:text-hot-pink">{SITE_TITLE}</a>
      <div
        id="nav-links"
        class="bg-white z-10 inset-x-0 sm:block top-12 m-0 p-0 sm:w-full h-15 text-black sm:h-auto items-center absolute"
      >
        <ul
          class="sm:h-10 text-center h-screen justify-center sm:flex sm:flex-row"
        >
          {
            pages.map((page) => (
              <Navigation navLinkUrl={page.url} navLinkText={page.title} />
            ))
          }
        </ul>
      </div>
      <div class="flex justify-end">
        <Hamburger />

        <a
          href="/search"
          aria-label="Buscar"
          class="font-bold text-xl hover:text-hot-pink"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg></a
        >
      </div>
    </div>

    <div class="flex justify-center mt-1 sm:mt-5">
      <p class="m-auto px-8">
        OneSoftNow es un software ahora al alcance de todos
      </p>
    </div>
  </nav>
</header>
<style>
  #nav-links {
    display: none;
  }

  #nav-links.expanded {
    display: block;
  }
</style>

<script>
  import '../scripts/menu';
</script>
