---
interface Props {
  navLinkText: string;
  navLinkUrl: string;
}
const { navLinkText, navLinkUrl } = Astro.props;
---

<div>
  <ul class="relative overflow-hidden w-full">
    <li class="list-none w-full">
      <a
        class="no-underline prose-h1: text-black sm:text-xl md:text-sm lg:text-2xl lg:px-2 text-2xl flex flex-wrap py-2 justify-center relative before:content-[''] before:absolute before:left-0 before:top-0 before:w-full before:h-0.5 before:bg-[#ff74e3] before:scale-x-0 before:transition-all before:duration-1000 before:origin-left hover:before:scale-x-100 after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-full after:h-0.5 after:bg-[#64288c] after:scale-x-0 after:transition-all after:duration-1000 after:origin-right hover:after:scale-x-100"
        href={navLinkUrl}
      >
        {navLinkText}
      </a>
    </li>
  </ul>
</div>
